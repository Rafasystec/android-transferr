<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.transferr.activities.PlainTourActivity">

    <!-- including the toolbar -->
    <include layout="@layout/toolbar"/>
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/black"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/lblPlainTour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plainTour"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/primary_dark"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/form_margin_bottom"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcviewTours"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
