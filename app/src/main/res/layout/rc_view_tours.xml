<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:maxHeight="250dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/note_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            tools:text="Titulo"
            />

        <TextView
            android:id="@+id/note_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            tools:text="Descrição"
            android:layout_below="@id/note_item_title"
            />
        <TextView
            android:id="@+id/seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            tools:text="Assentos faltando"
            android:layout_below="@id/note_item_description"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/note_item_description"
            android:layout_marginEnd="58dp"
            android:src="@drawable/quantum_ic_closed_caption_grey600_36" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
